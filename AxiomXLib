local AxiomX = {}
AxiomX.__index = AxiomX

local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

function AxiomX:CreateWindow(settings)

    settings = settings or {}
    local Title = settings.Title or "AxiomX Hub"
    local KeySystem = settings.KeySystem or false
    local Key = settings.Key or "AxiomX"

    -- GUI
    local ScreenGui = Instance.new("ScreenGui", playerGui)
    ScreenGui.Name = "AxiomX_V2"
    ScreenGui.ResetOnSpawn = false

    -- KEY SYSTEM
    if KeySystem then
        local KeyFrame = Instance.new("Frame", ScreenGui)
        KeyFrame.Size = UDim2.new(0,300,0,150)
        KeyFrame.Position = UDim2.new(0.5,-150,0.5,-75)
        KeyFrame.BackgroundColor3 = Color3.fromRGB(20,20,25)
        Instance.new("UICorner",KeyFrame).CornerRadius = UDim.new(0,12)

        local Box = Instance.new("TextBox", KeyFrame)
        Box.Size = UDim2.new(0.8,0,0,35)
        Box.Position = UDim2.new(0.1,0,0.3,0)
        Box.PlaceholderText = "Enter Key..."
        Box.Text = ""
        Box.TextColor3 = Color3.new(1,1,1)
        Box.BackgroundColor3 = Color3.fromRGB(35,35,45)
        Instance.new("UICorner",Box).CornerRadius = UDim.new(0,8)

        local Check = Instance.new("TextButton", KeyFrame)
        Check.Size = UDim2.new(0.8,0,0,35)
        Check.Position = UDim2.new(0.1,0,0.65,0)
        Check.Text = "Confirm"
        Check.BackgroundColor3 = Color3.fromRGB(255,0,80)
        Check.TextColor3 = Color3.new(1,1,1)
        Instance.new("UICorner",Check).CornerRadius = UDim.new(0,8)

        local Passed = false

        Check.MouseButton1Click:Connect(function()
            if Box.Text == Key then
                Passed = true
                KeyFrame:Destroy()
            else
                Box.Text = "Wrong Key"
            end
        end)

        repeat task.wait() until Passed
    end

    -- MAIN
    local Main = Instance.new("Frame", ScreenGui)
    Main.Size = UDim2.new(0,600,0,400)
    Main.Position = UDim2.new(0.5,-300,0.5,-200)
    Main.BackgroundColor3 = Color3.fromRGB(15,15,20)
    Main.Active = true
    Main.Draggable = true
    Instance.new("UICorner",Main).CornerRadius = UDim.new(0,15)

    -- Top Bar
    local Top = Instance.new("Frame", Main)
    Top.Size = UDim2.new(1,0,0,40)
    Top.BackgroundColor3 = Color3.fromRGB(255,0,80)
    Instance.new("UICorner",Top).CornerRadius = UDim.new(0,15)

    local TitleLabel = Instance.new("TextLabel", Top)
    TitleLabel.Size = UDim2.new(1,-50,1,0)
    TitleLabel.BackgroundTransparency = 1
    TitleLabel.Text = Title
    TitleLabel.TextColor3 = Color3.new(1,1,1)
    TitleLabel.Font = Enum.Font.GothamBold
    TitleLabel.TextSize = 18

    -- Minimize
    local MinBtn = Instance.new("TextButton", Top)
    MinBtn.Size = UDim2.new(0,40,0,40)
    MinBtn.Position = UDim2.new(1,-40,0,0)
    MinBtn.Text = "-"
    MinBtn.BackgroundTransparency = 1
    MinBtn.TextColor3 = Color3.new(1,1,1)

    local Minimized = false
    MinBtn.MouseButton1Click:Connect(function()
        Minimized = not Minimized
        if Minimized then
            Main.Size = UDim2.new(0,600,0,40)
        else
            Main.Size = UDim2.new(0,600,0,400)
        end
    end)

    -- Tabs
    local TabsFrame = Instance.new("Frame", Main)
    TabsFrame.Size = UDim2.new(0,150,1,-40)
    TabsFrame.Position = UDim2.new(0,0,0,40)
    TabsFrame.BackgroundColor3 = Color3.fromRGB(25,25,35)

    local Pages = Instance.new("Frame", Main)
    Pages.Size = UDim2.new(1,-150,1,-40)
    Pages.Position = UDim2.new(0,150,0,40)
    Pages.BackgroundTransparency = 1

    local TabList = Instance.new("UIListLayout", TabsFrame)
    TabList.Padding = UDim.new(0,5)

    local WindowFunctions = {}

    function WindowFunctions:CreateTab(name)
        local TabButton = Instance.new("TextButton", TabsFrame)
        TabButton.Size = UDim2.new(1,0,0,35)
        TabButton.Text = name
        TabButton.BackgroundColor3 = Color3.fromRGB(35,35,45)
        TabButton.TextColor3 = Color3.new(1,1,1)

        local Page = Instance.new("ScrollingFrame", Pages)
        Page.Size = UDim2.new(1,0,1,0)
        Page.CanvasSize = UDim2.new(0,0,0,0)
        Page.ScrollBarThickness = 4
        Page.Visible = false

        local Layout = Instance.new("UIListLayout", Page)
        Layout.Padding = UDim.new(0,6)

        TabButton.MouseButton1Click:Connect(function()
            for _,v in pairs(Pages:GetChildren()) do
                if v:IsA("ScrollingFrame") then
                    v.Visible = false
                end
            end
            Page.Visible = true
        end)

        local TabFunctions = {}

        function TabFunctions:CreateButton(text, callback)
            local Btn = Instance.new("TextButton", Page)
            Btn.Size = UDim2.new(1,-10,0,35)
            Btn.Text = text
            Btn.BackgroundColor3 = Color3.fromRGB(40,40,55)
            Btn.TextColor3 = Color3.new(1,1,1)

            Btn.MouseButton1Click:Connect(function()
                if callback then callback() end
            end)
        end

        function TabFunctions:CreateSlider(text, min, max, callback)
            local SliderBtn = Instance.new("TextButton", Page)
            SliderBtn.Size = UDim2.new(1,-10,0,35)
            SliderBtn.Text = text .. " : "..min
            SliderBtn.BackgroundColor3 = Color3.fromRGB(40,40,55)
            SliderBtn.TextColor3 = Color3.new(1,1,1)

            local value = min

            SliderBtn.MouseButton1Click:Connect(function()
                value = value + 1
                if value > max then value = min end
                SliderBtn.Text = text .. " : "..value
                if callback then callback(value) end
            end)
        end

        return TabFunctions
    end

    return WindowFunctions
end

return AxiomX

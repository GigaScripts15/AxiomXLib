]]
    end
    
    return Library
end)()

-- Carregar a biblioteca
-- Nota: Se estiver usando loadstring, este √© o c√≥digo completo para carregar

-- Exemplo de uso COM KEYBIND Control+Left:
local function exemploComKeybind()
    -- Inicializar - janelas ser√£o centralizadas automaticamente
    local Library = AxiomXLib.new({
        Theme = "Matrix",
        Size = UDim2.new(0, 500, 0, 400), -- Tamanho da janela
        EnableKeybinds = true -- Keybinds habilitados por padr√£o
    })
    
    -- Criar janela (ser√° automaticamente centralizada na tela)
    local Window = Library:CreateWindow({
        Title = "AxiomX Interface"
        -- N√£o precisa especificar Position, ser√° centralizado automaticamente!
    })
    
    -- Adicionar aba
    local Tab = Window:AddTab("Main", Library:GetIcon("Home"))
    
    -- Adicionar se√ß√£o
    local Section = Tab:AddSection("Controls")
    
    -- Adicionar elementos
    Section:AddButton({
        Text = "Test Button",
        Icon = Library:GetIcon("Star"),
        Callback = function()
            print("Hello from AxiomXLib!")
        end
    })
    
    -- Adicionar informa√ß√µes sobre o keybind
    local KeybindSection = Tab:AddSection("Keybinds Info")
    
    KeybindSection:AddLabel("Global Keybind: Control + Left")
    KeybindSection:AddLabel("Minimize/Restore All Windows")
    KeybindSection:AddButton({
        Text = "Test Keybind Now",
        Icon = Library:GetIcon("Keyboard"),
        Callback = function()
            print("Pressione Control+Left para minimizar/restaurar todas as janelas!")
            print("Funcionalidades:")
            print("‚Ä¢ Control+Left: Minimiza/Restaura todas as janelas")
            print("‚Ä¢ Top Bar: Janelas minimizadas aparecem como barras no canto")
            print("‚Ä¢ Clique em '‚Üó' na Top Bar para restaurar individualmente")
        end
    })
    
    -- Centralizar manualmente se necess√°rio
    Window:Center()
    
    -- Centralizar todas as janelas abertas
    Library:CenterAllWindows()
    
    -- Criar uma segunda janela para demonstrar o keybind
    task.wait(1)
    local SecondWindow = Library:CreateWindow({
        Title = "Segunda Janela",
        Size = UDim2.new(0, 400, 0, 300)
    })
    
    local SecondTab = SecondWindow:AddTab("Info", Library:GetIcon("Info"))
    local InfoSection = SecondTab:AddSection("Informa√ß√µes")
    
    InfoSection:AddLabel("Teste o keybind Control+Left!")
    InfoSection:AddLabel("Ambas as janelas ser√£o minimizadas.")
    InfoSection:AddLabel("Pressione novamente para restaurar.")
    
    -- Retornar a biblioteca para uso externo
    return Library
end

-- Executar o exemplo (opcional)
-- exemploComKeybind()

return AxiomXLib

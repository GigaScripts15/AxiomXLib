-- Utilitários
local ViewportSize = workspace.CurrentCamera.ViewportSize
local UIScale = ViewportSize.Y / 450

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "AxiomX"
ScreenGui.Parent = CoreGui
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
ScreenGui.ResetOnSpawn = false

-- Funções auxiliares
local function GetTheme()
    return AxiomX.Themes[AxiomX.Settings.Theme]
end

local function Create(className, parent, properties)
    local obj = Instance.new(className)
    if parent then
        obj.Parent = parent
    end
    if properties then
        for prop, value in pairs(properties) do
            obj[prop] = value
        end
    end
    return obj
end

local function CreateTween(obj, prop, goal, duration, style)
    style = style or Enum.EasingStyle.Quad
    local tween = TweenService:Create(obj, TweenInfo.new(duration or 0.2, style), {[prop] = goal})
    tween:Play()
    return tween
end

local function MakeDraggable(frame)
    local dragging = false
    local dragStart, startPos
    
    frame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
        end
    end)
    
    frame.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = false
        end
    end)
    
    frame.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement and dragging then
            local delta = input.Position - dragStart
            frame.Position = UDim2.new(
                startPos.X.Scale,
                startPos.X.Offset + delta.X,
                startPos.Y.Scale,
                startPos.Y.Offset + delta.Y
            )
        end
    end)
end

-- Elementos de estilo
local function AddCorner(instance, radius)
    return Create("UICorner", instance, {
        CornerRadius = UDim.new(0, radius or 6)
    })
end

local function AddStroke(instance, color, thickness)
    return Create("UIStroke", instance, {
        Color = color or GetTheme().Border,
        Thickness = thickness or 1,
        ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    })
end

function AxiomX:GetIcon(name)
    if not name then return "" end
    name = name:lower()
    return self.Icons[name] or (name:find("rbxassetid://") and name) or ""
end

-- Função principal para criar janela
function AxiomX:CreateWindow(config)
    config = config or {}
    local title = config.Title or "AxiomX"
    local subtitle = config.Subtitle or "Library"
    local width, height = config.Size and config.Size[1] or 600, config.Size and config.Size[2] or 400
    
    -- Frame principal
    local MainFrame = Create("Frame", ScreenGui, {
        Size = UDim2.fromOffset(width, height),
        Position = UDim2.new(0.5, -width/2, 0.5, -height/2),
        BackgroundColor3 = GetTheme().Background,
        BorderSizePixel = 0,
        Active = true,
        Name = "MainFrame"
    })
    AddCorner(MainFrame, 8)
    AddStroke(MainFrame, GetTheme().Border, 1)
    MakeDraggable(MainFrame)
    
    -- Top Bar
    local TopBar = Create("Frame", MainFrame, {
        Size = UDim2.new(1, 0, 0, 35),
        BackgroundColor3 = GetTheme().Surface,
        BorderSizePixel = 0,
        Name = "TopBar"
    })
    AddCorner(TopBar, 8)
    
    -- Título
    local Title = Create("TextLabel", TopBar, {
        Size = UDim2.new(0.5, 0, 1, 0),
        Position = UDim2.new(0, 15, 0, 0),
        BackgroundTransparency = 1,
        Text = title,
        TextColor3 = GetTheme().Text,
        TextSize = 14,
        Font = Enum.Font.GothamBold,
        TextXAlignment = Enum.TextXAlignment.Left
    })
    
    local Subtitle = Create("TextLabel", TopBar, {
        Size = UDim2.new(0.5, 0, 1, 0),
        Position = UDim2.new(0.5, 5, 0, 0),
        BackgroundTransparency = 1,
        Text = subtitle,
        TextColor3 = GetTheme().TextMuted,
        TextSize = 12,
        Font = Enum.Font.Gotham,
        TextXAlignment = Enum.TextXAlignment.Left
    })
    
    -- Botões da barra
    local CloseBtn = Create("ImageButton", TopBar, {
        Size = UDim2.new(0, 20, 0, 20),
        Position = UDim2.new(1, -30, 0.5, -10),
        BackgroundTransparency = 1,
        Image = "rbxassetid://10747384394",
        ImageColor3 = GetTheme().Error
    })
    
    -- Barra lateral de abas
    local TabBar = Create("ScrollingFrame", MainFrame, {
        Size = UDim2.new(0, 160, 1, -40),
        Position = UDim2.new(0, 0, 0, 37),
        BackgroundColor3 = GetTheme().Surface,
        BackgroundTransparency = 0.1,
        BorderSizePixel = 0,
        ScrollBarThickness = 2,
        ScrollBarImageColor3 = GetTheme().Primary,
        CanvasSize = UDim2.new(0, 0, 0, 0),
        AutomaticCanvasSize = Enum.AutomaticSize.Y,
        Name = "TabBar"
    })
    
    local TabPadding = Create("UIPadding", TabBar, {
        PaddingTop = UDim.new(0, 10),
        PaddingLeft = UDim.new(0, 5),
        PaddingRight = UDim.new(0, 5)
    })
    
    local TabListLayout = Create("UIListLayout", TabBar, {
        Padding = UDim.new(0, 5),
        SortOrder = Enum.SortOrder.LayoutOrder
    })
    
    -- Container de conteúdo
    local ContentContainer = Create("Frame", MainFrame, {
        Size = UDim2.new(1, -165, 1, -40),
        Position = UDim2.new(0, 165, 0, 37),
        BackgroundTransparency = 1,
        ClipsDescendants = true,
        Name = "ContentContainer"
    })
    
    -- Variáveis de controle
    local currentTab = nil
    local Window = {}
    
    -- Função para fechar
    CloseBtn.MouseButton1Click:Connect(function()
        MainFrame:Destroy()
    end)
    
    -- Criar abas
    function Window:CreateTab(config)
        config = config or {}
        local tabName = config.Name or "Tab"
        local tabIcon = self:GetIcon(config.Icon or "home")
        
        -- Botão da aba
        local TabButton = Create("ImageButton", TabBar, {
            Size = UDim2.new(1, 0, 0, 32),
            BackgroundColor3 = GetTheme().Background,
            BackgroundTransparency = 0.5,
            AutoButtonColor = false
        })
        AddCorner(TabButton, 6)
        
        -- Ícone
        local Icon = Create("ImageLabel", TabButton, {
            Size = UDim2.new(0, 18, 0, 18),
            Position = UDim2.new(0, 8, 0.5, -9),
            BackgroundTransparency = 1,
            Image = tabIcon,
            ImageColor3 = GetTheme().Text
        })
        
        -- Texto
        local Label = Create("TextLabel", TabButton, {
            Size = UDim2.new(1, -30, 1, 0),
            Position = UDim2.new(0, 28, 0, 0),
            BackgroundTransparency = 1,
            Text = tabName,
            TextColor3 = GetTheme().Text,
            TextSize = 12,
            Font = Enum.Font.Gotham,
            TextXAlignment = Enum.TextXAlignment.Left
        })
        
        -- Container da aba
        local TabContainer = Create("ScrollingFrame", ContentContainer, {
            Size = UDim2.new(1, 0, 1, 0),
            BackgroundTransparency = 1,
            Visible = false,
            ScrollBarThickness = 4,
            ScrollBarImageColor3 = GetTheme().Primary,
            CanvasSize = UDim2.new(0, 0, 0, 0),
            AutomaticCanvasSize = Enum.AutomaticSize.Y,
            BorderSizePixel = 0,
            Name = tabName .. "Container"
        })
        
        local ContainerPadding = Create("UIPadding", TabContainer, {
            PaddingTop = UDim.new(0, 10),
            PaddingBottom = UDim.new(0, 10),
            PaddingLeft = UDim.new(0, 10),
            PaddingRight = UDim.new(0, 10)
        })
        
        local ContainerLayout = Create("UIListLayout", TabContainer, {
            Padding = UDim.new(0, 8),
            SortOrder = Enum.SortOrder.LayoutOrder
        })
        
        -- Selecionar aba
        TabButton.MouseButton1Click:Connect(function()
            if currentTab then
                currentTab.Button.BackgroundColor3 = GetTheme().Background
                currentTab.Button.BackgroundTransparency = 0.5
                currentTab.Container.Visible = false
            end
            
            TabButton.BackgroundColor3 = GetTheme().Primary
            TabButton.BackgroundTransparency = 0
            TabContainer.Visible = true
            
            currentTab = {
                Button = TabButton,
                Container = TabContainer
            }
        end)
        
        -- Selecionar primeira aba automaticamente
        if #AxiomX.Tabs == 0 then
            TabButton.BackgroundColor3 = GetTheme().Primary
            TabButton.BackgroundTransparency = 0
            TabContainer.Visible = true
            currentTab = {
                Button = TabButton,
                Container = TabContainer
            }
        end
        
        local Tab = {
            Container = TabContainer,
            Layout = ContainerLayout
        }
        
        table.insert(AxiomX.Tabs, Tab)
        
        -- MÉTODOS DA ABA - TODOS CORRIGIDOS E FUNCIONAIS
        
        function Tab:AddSection(config)
            config = config or {}
            local sectionName = config.Name or "Section"
            
            local Section = Create("Frame", TabContainer, {
                Size = UDim2.new(1, 0, 0, 25),
                BackgroundTransparency = 1
            })
            
            local Line = Create("Frame", Section, {
                Size = UDim2.new(1, 0, 0, 1),
                Position = UDim2.new(0, 0, 1, -1),
                BackgroundColor3 = GetTheme().Primary,
                BackgroundTransparency = 0.5
            })
            
            local SectionLabel = Create("TextLabel", Section, {
                Size = UDim2.new(1, 0, 1, 0),
                BackgroundTransparency = 1,
                Text = sectionName:upper(),
                TextColor3 = GetTheme().Primary,
                TextSize = 14,
                Font = Enum.Font.GothamBold,
                TextXAlignment = Enum.TextXAlignment.Left
            })
            
            return Section
        end
        
        function Tab:AddButton(config)
            config = config or {}
            local btnName = config.Name or "Button"
            local callback = config.Callback or function() end
            
            local Button = Create("ImageButton", TabContainer, {
                Size = UDim2.new(1, 0, 0, 35),
                BackgroundColor3 = GetTheme().Surface,
                AutoButtonColor = false
            })
            AddCorner(Button, 6)
            
            local Label = Create("TextLabel", Button, {
                Size = UDim2.new(1, -40, 1, 0),
                Position = UDim2.new(0, 10, 0, 0),
                BackgroundTransparency = 1,
                Text = btnName,
                TextColor3 = GetTheme().Text,
                TextSize = 13,
                Font = Enum.Font.Gotham,
                TextXAlignment = Enum.TextXAlignment.Left
            })
            
            local Arrow = Create("ImageLabel", Button, {
                Size = UDim2.new(0, 16, 0, 16),
                Position = UDim2.new(1, -25, 0.5, -8),
                BackgroundTransparency = 1,
                Image = "rbxassetid://10709791437",
                ImageColor3 = GetTheme().TextMuted
            })
            
            -- Efeitos hover
            Button.MouseEnter:Connect(function()
                CreateTween(Button, "BackgroundColor3", GetTheme().Primary, 0.2)
            end)
            
            Button.MouseLeave:Connect(function()
                CreateTween(Button, "BackgroundColor3", GetTheme().Surface, 0.2)
            end)
            
            Button.MouseButton1Click:Connect(callback)
            
            return Button
        end
        
        function Tab:AddToggle(config)
            config = config or {}
            local toggleName = config.Name or "Toggle"
            local default = config.Default or false
            local callback = config.Callback or function() end
            local flag = config.Flag
            
            -- Frame principal
            local ToggleFrame = Create("ImageButton", TabContainer, {
                Size = UDim2.new(1, 0, 0, 35),
                BackgroundColor3 = GetTheme().Surface,
                AutoButtonColor = false
            })
            AddCorner(ToggleFrame, 6)
            
            -- Label
            local Label = Create("TextLabel", ToggleFrame, {
                Size = UDim2.new(1, -60, 1, 0),
                Position = UDim2.new(0, 10, 0, 0),
                BackgroundTransparency = 1,
                Text = toggleName,
                TextColor3 = GetTheme().Text,
                TextSize = 13,
                Font = Enum.Font.Gotham,
                TextXAlignment = Enum.TextXAlignment.Left
            })
            
            -- Fundo do toggle
            local ToggleBg = Create("Frame", ToggleFrame, {
                Size = UDim2.new(0, 44, 0, 22),
                Position = UDim2.new(1, -54, 0.5, -11),
                BackgroundColor3 = GetTheme().Border,
                BackgroundTransparency = 0.3
            })
            AddCorner(ToggleBg, 11)
            
            -- Botão do toggle
            local ToggleBtn = Create("Frame", ToggleBg, {
                Size = UDim2.new(0, 18, 0, 18),
                Position = default and UDim2.new(1, -20, 0.5, -9) or UDim2.new(0, 2, 0.5, -9),
                BackgroundColor3 = GetTheme().Text
            })
            AddCorner(ToggleBtn, 9)
            
            -- Estado
            local state = default
            
            -- Função para atualizar toggle
            local function SetState(newState)
                state = newState
                CreateTween(ToggleBg, "BackgroundColor3", state and GetTheme().Success or GetTheme().Border, 0.2)
                CreateTween(ToggleBtn, "Position", 
                    state and UDim2.new(1, -20, 0.5, -9) or UDim2.new(0, 2, 0.5, -9), 0.2)
                callback(state)
                
                if flag then
                    AxiomX.Flags[flag] = state
                end
            end
            
            -- Click
            ToggleFrame.MouseButton1Click:Connect(function()
                SetState(not state)
            end)
            
            -- Carregar flag se existir
            if flag and AxiomX.Flags[flag] ~= nil then
                SetState(AxiomX.Flags[flag])
            end
            
            return ToggleFrame
        end
        
        function Tab:AddSlider(config)
            config = config or {}
            local sliderName = config.Name or "Slider"
            local min = config.Min or 0
            local max = config.Max or 100
            local default = config.Default or 50
            local callback = config.Callback or function() end
            local flag = config.Flag
            local suffix = config.Suffix or ""
            
            -- Frame principal
            local SliderFrame = Create("Frame", TabContainer, {
                Size = UDim2.new(1, 0, 0, 55),
                BackgroundColor3 = GetTheme().Surface
            })
            AddCorner(SliderFrame, 6)
            
            -- Label
            local Label = Create("TextLabel", SliderFrame, {
                Size = UDim2.new(0.5, 0, 0, 20),
                Position = UDim2.new(0, 10, 0, 5),
                BackgroundTransparency = 1,
                Text = sliderName,
                TextColor3 = GetTheme().Text,
                TextSize = 13,
                Font = Enum.Font.Gotham,
                TextXAlignment = Enum.TextXAlignment.Left
            })
            
            -- Valor
            local ValueLabel = Create("TextLabel", SliderFrame, {
                Size = UDim2.new(0, 60, 0, 20),
                Position = UDim2.new(1, -70, 0, 5),
                BackgroundTransparency = 1,
                Text = tostring(default) .. suffix,
                TextColor3 = GetTheme().Primary,
                TextSize = 13,
                Font = Enum.Font.GothamBold,
                TextXAlignment = Enum.TextXAlignment.Right
            })
            
            -- Barra do slider
            local SliderBar = Create("Frame", SliderFrame, {
                Size = UDim2.new(1, -30, 0, 4),
                Position = UDim2.new(0, 15, 0, 35),
                BackgroundColor3 = GetTheme().Border
            })
            AddCorner(SliderBar, 2)
            
            -- Preenchimento
            local SliderFill = Create("Frame", SliderBar, {
                Size = UDim2.new((default - min) / (max - min), 0, 1, 0),
                BackgroundColor3 = GetTheme().Primary
            })
            AddCorner(SliderFill, 2)
            
            -- Botão do slider
            local SliderButton = Create("ImageButton", SliderFrame, {
                Size = UDim2.new(0, 14, 0, 14),
                Position = UDim2.new(0, 15 + (SliderFill.Size.X.Scale * (SliderBar.AbsoluteSize.X - 14)), 0, 35 - 5),
                BackgroundTransparency = 1,
                Image = "rbxassetid://10709798100",
                ImageColor3 = GetTheme().Text
            })
            
            -- Variáveis de controle
            local value = default
            local dragging = false
            
            -- Função para atualizar slider
            local function UpdateSlider(input)
                if not dragging then return end
                
                local pos = input.Position.X - SliderBar.AbsolutePosition.X
                local percent = math.clamp(pos / SliderBar.AbsoluteSize.X, 0, 1)
                local newValue = min + (percent * (max - min))
                newValue = math.floor(newValue * 100) / 100
                
                value = newValue
                SliderFill.Size = UDim2.new(percent, 0, 1, 0)
                SliderButton.Position = UDim2.new(0, 15 + (percent * (SliderBar.AbsoluteSize.X - 14)), 0, 30)
                ValueLabel.Text = tostring(value) .. suffix
                callback(value)
                
                if flag then
                    AxiomX.Flags[flag] = value
                end
            end
            
            -- Eventos de mouse
            SliderButton.MouseButton1Down:Connect(function(input)
                dragging = true
            end)
            
            UserInputService.InputChanged:Connect(function(input)
                if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
                    UpdateSlider(input)
                end
            end)
            
            UserInputService.InputEnded:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    dragging = false
                end
            end)
            
            SliderBar.InputBegan:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 then
                    dragging = true
                    UpdateSlider(input)
                end
            end)
            
            -- Carregar flag
            if flag and AxiomX.Flags[flag] then
                local percent = (AxiomX.Flags[flag] - min) / (max - min)
                SliderFill.Size = UDim2.new(percent, 0, 1, 0)
                SliderButton.Position = UDim2.new(0, 15 + (percent * (SliderBar.AbsoluteSize.X - 14)), 0, 30)
                ValueLabel.Text = tostring(AxiomX.Flags[flag]) .. suffix
                value = AxiomX.Flags[flag]
            end
            
            return SliderFrame
        end
        
        function Tab:AddDropdown(config)
            config = config or {}
            local dropdownName = config.Name or "Dropdown"
            local options = config.Options or {}
            local default = config.Default or ""
            local callback = config.Callback or function() end
            local flag = config.Flag
            
            -- Frame principal
            local DropdownFrame = Create("ImageButton", TabContainer, {
                Size = UDim2.new(1, 0, 0, 35),
                BackgroundColor3 = GetTheme().Surface,
                AutoButtonColor = false
            })
            AddCorner(DropdownFrame, 6)
            
            -- Label
            local Label = Create("TextLabel", DropdownFrame, {
                Size = UDim2.new(0.5, 0, 1, 0),
                Position = UDim2.new(0, 10, 0, 0),
                BackgroundTransparency = 1,
                Text = dropdownName,
                TextColor3 = GetTheme().Text,
                TextSize = 13,
                Font = Enum.Font.Gotham,
                TextXAlignment = Enum.TextXAlignment.Left
            })
            
            -- Label selecionado
            local SelectedLabel = Create("TextLabel", DropdownFrame, {
                Size = UDim2.new(0, 100, 1, 0),
                Position = UDim2.new(1, -130, 0, 0),
                BackgroundTransparency = 1,
                Text = default ~= "" and default or "Selecionar...",
                TextColor3 = GetTheme().TextMuted,
                TextSize = 12,
                Font = Enum.Font.Gotham,
                TextXAlignment = Enum.TextXAlignment.Right
            })
            
            -- Seta
            local Arrow = Create("ImageLabel", DropdownFrame, {
                Size = UDim2.new(0, 16, 0, 16),
                Position = UDim2.new(1, -25, 0.5, -8),
                BackgroundTransparency = 1,
                Image = "rbxassetid://10709790948",
                ImageColor3 = GetTheme().TextMuted
            })
            
            -- Lista dropdown
            local DropdownList = Create("ScrollingFrame", ScreenGui, {
                Size = UDim2.new(0, 180, 0, 120),
                BackgroundColor3 = GetTheme().Surface,
                Visible = false,
                ScrollBarThickness = 4,
                ScrollBarImageColor3 = GetTheme().Primary,
                CanvasSize = UDim2.new(0, 0, 0, 0),
                AutomaticCanvasSize = Enum.AutomaticSize.Y,
                BorderSizePixel = 0,
                ZIndex = 10
            })
            AddCorner(DropdownList, 6)
            AddStroke(DropdownList)
            
            local ListLayout = Create("UIListLayout", DropdownList, {
                Padding = UDim.new(0, 2),
                SortOrder = Enum.SortOrder.LayoutOrder
            })
            
            -- Variável de seleção
            local selected = default
            
            -- Função para criar opção
            local function CreateOption(opt)
                local Option = Create("ImageButton", DropdownList, {
                    Size = UDim2.new(1, 0, 0, 25),
                    BackgroundColor3 = GetTheme().Background,
                    BackgroundTransparency = 0.5,
                    AutoButtonColor = false,
                    ZIndex = 11
                })
                
                local OptLabel = Create("TextLabel", Option, {
                    Size = UDim2.new(1, -10, 1, 0),
                    Position = UDim2.new(0, 10, 0, 0),
                    BackgroundTransparency = 1,
                    Text = opt,
                    TextColor3 = GetTheme().Text,
                    TextSize = 12,
                    Font = Enum.Font.Gotham,
                    TextXAlignment = Enum.TextXAlignment.Left,
                    ZIndex = 11
                })
                
                local Check = Create("ImageLabel", Option, {
                    Size = UDim2.new(0, 16, 0, 16),
                    Position = UDim2.new(1, -25, 0.5, -8),
                    BackgroundTransparency = 1,
                    Image = "rbxassetid://10709790644",
                    ImageColor3 = GetTheme().Success,
                    Visible = (opt == selected),
                    ZIndex = 11
                })
                
                Option.MouseButton1Click:Connect(function()
                    selected = opt
                    SelectedLabel.Text = opt
                    DropdownList.Visible = false
                    Arrow.Rotation = 0
                    callback(opt)
                    
                    if flag then
                        AxiomX.Flags[flag] = opt
                    end
                    
                    -- Atualizar checks
                    for _, child in pairs(DropdownList:GetChildren()) do
                        if child:IsA("ImageButton") then
                            local checkImg = child:FindFirstChildOfClass("ImageLabel")
                            if checkImg then
                                checkImg.Visible = (child:FindFirstChildOfClass("TextLabel").Text == opt)
                            end
                        end
                    end
                end)
            end
            
            -- Criar opções
            for _, opt in ipairs(options) do
                CreateOption(opt)
            end
            
            -- Posicionar lista
            local function UpdateListPosition()
                local absPos = DropdownFrame.AbsolutePosition
                local absSize = DropdownFrame.AbsoluteSize
                DropdownList.Position = UDim2.fromOffset(absPos.X, absPos.Y + absSize.Y + 2)
            end
            
            -- Abrir/fechar dropdown
            DropdownFrame.MouseButton1Click:Connect(function()
                DropdownList.Visible = not DropdownList.Visible
                Arrow.Rotation = DropdownList.Visible and 180 or 0
                if DropdownList.Visible then
                    UpdateListPosition()
                end
            end)
            
            -- Fechar ao clicar fora
            UserInputService.InputBegan:Connect(function(input)
                if input.UserInputType == Enum.UserInputType.MouseButton1 and DropdownList.Visible then
                    local mousePos = UserInputService:GetMouseLocation()
                    local listPos = DropdownList.AbsolutePosition
                    local listSize = DropdownList.AbsoluteSize
                    
                    if mousePos.X < listPos.X or mousePos.X > listPos.X + listSize.X or
                       mousePos.Y < listPos.Y or mousePos.Y > listPos.Y + listSize.Y then
                        DropdownList.Visible = false
                        Arrow.Rotation = 0
                    end
                end
            end)
            
            -- Carregar flag
            if flag and AxiomX.Flags[flag] then
                selected = AxiomX.Flags[flag]
                SelectedLabel.Text = selected
            end
            
            return DropdownFrame
        end
        
        function Tab:AddTextBox(config)
            config = config or {}
            local boxName = config.Name or "Text Box"
            local placeholder = config.Placeholder or "Digite..."
            local default = config.Default or ""
            local callback = config.Callback or function() end
            local flag = config.Flag
            
            local BoxFrame = Create("Frame", TabContainer, {
                Size = UDim2.new(1, 0, 0, 35),
                BackgroundColor3 = GetTheme().Surface
            })
            AddCorner(BoxFrame, 6)
            
            local Label = Create("TextLabel", BoxFrame, {
                Size = UDim2.new(0, 100, 1, 0),
                Position = UDim2.new(0, 10, 0, 0),
                BackgroundTransparency = 1,
                Text = boxName,
                TextColor3 = GetTheme().Text,
                TextSize = 13,
                Font = Enum.Font.Gotham,
                TextXAlignment = Enum.TextXAlignment.Left
            })
            
            local TextBox = Create("TextBox", BoxFrame, {
                Size = UDim2.new(1, -120, 0, 25),
                Position = UDim2.new(1, -110, 0.5, -12.5),
                BackgroundColor3 = GetTheme().Background,
                BackgroundTransparency = 0.3,
                PlaceholderText = placeholder,
                PlaceholderColor3 = GetTheme().TextMuted,
                Text = flag and AxiomX.Flags[flag] or default,
                TextColor3 = GetTheme().Text,
                TextSize = 12,
                Font = Enum.Font.Gotham,
                ClearTextOnFocus = false
            })
            AddCorner(TextBox, 4)
            
            TextBox.FocusLost:Connect(function(enterPressed)
                if enterPressed then
                    callback(TextBox.Text)
                    if flag then
                        AxiomX.Flags[flag] = TextBox.Text
                    end
                end
            end)
            
            return BoxFrame
        end
        
        function Tab:AddLabel(config)
            config = config or {}
            local text = config.Text or "Label"
            local size = config.Size or "Normal"
            
            local fontSize = size == "Small" and 11 or size == "Large" and 16 or 13
            local font = size == "Large" and Enum.Font.GothamBold or Enum.Font.Gotham
            
            local Label = Create("TextLabel", TabContainer, {
                Size = UDim2.new(1, 0, 0, 25),
                BackgroundTransparency = 1,
                Text = text,
                TextColor3 = GetTheme().Text,
                TextSize = fontSize,
                Font = font,
                TextXAlignment = Enum.TextXAlignment.Left
            })
            
            return Label
        end
        
        return Tab
    end
    
    return Window
end

return AxiomX

--// MATRIX HUB | NO KEY SYSTEM
--// Universal Script

local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

-- UI Base
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
ScreenGui.Name = "MatrixHub"

-- Main Frame
local Main = Instance.new("Frame", ScreenGui)
Main.Size = UDim2.new(0, 520, 0, 360)
Main.Position = UDim2.new(0.5, -260, 0.5, -180)
Main.BackgroundColor3 = Color3.fromRGB(5, 15, 5)
Main.BorderSizePixel = 0
Main.Active = true
Main.Draggable = true

-- Title
local Title = Instance.new("TextLabel", Main)
Title.Size = UDim2.new(1, 0, 0, 40)
Title.BackgroundTransparency = 1
Title.Text = "☘ MATRIX HUB"
Title.TextColor3 = Color3.fromRGB(0,255,100)
Title.Font = Enum.Font.Code
Title.TextSize = 22

-- Minimize Button
local MinBtn = Instance.new("TextButton", Main)
MinBtn.Size = UDim2.new(0, 40, 0, 40)
MinBtn.Position = UDim2.new(1, -40, 0, 0)
MinBtn.Text = "-"
MinBtn.Font = Enum.Font.Code
MinBtn.TextSize = 28
MinBtn.BackgroundTransparency = 1
MinBtn.TextColor3 = Color3.fromRGB(0,255,100)

-- Floating Button
local FloatBtn = Instance.new("TextButton", ScreenGui)
FloatBtn.Size = UDim2.new(0, 60, 0, 60)
FloatBtn.Position = UDim2.new(0, 20, 0.5, -30)
FloatBtn.Text = "☘"
FloatBtn.Visible = false
FloatBtn.Font = Enum.Font.Code
FloatBtn.TextSize = 26
FloatBtn.BackgroundColor3 = Color3.fromRGB(0,40,0)
FloatBtn.TextColor3 = Color3.fromRGB(0,255,100)
FloatBtn.Active = true
FloatBtn.Draggable = true

-- Minimize Logic
MinBtn.MouseButton1Click:Connect(function()
	Main.Visible = false
	FloatBtn.Visible = true
end)

FloatBtn.MouseButton1Click:Connect(function()
	Main.Visible = true
	FloatBtn.Visible = false
end)

-- Matrix Rain Background
local Rain = Instance.new("Frame", Main)
Rain.Size = UDim2.new(1,0,1,0)
Rain.BackgroundTransparency = 1
Rain.ZIndex = 0

task.spawn(function()
	while true do
		local drop = Instance.new("TextLabel", Rain)
		drop.Text = string.char(math.random(33,126))
		drop.Font = Enum.Font.Code
		drop.TextColor3 = Color3.fromRGB(0,255,100)
		drop.TextTransparency = 0
		drop.BackgroundTransparency = 1
		drop.Position = UDim2.new(math.random(),0,0,0)
		drop.Size = UDim2.new(0,14,0,14)

		game:GetService("TweenService"):Create(
			drop,
			TweenInfo.new(math.random(2,4)),
			{Position = UDim2.new(drop.Position.X.Scale,0,1,0), TextTransparency = 1}
		):Play()

		task.delay(4,function() drop:Destroy() end)
		task.wait(0.08)
	end
end)

-- Infinite Jump
UIS.JumpRequest:Connect(function()
	if _G.InfJump then
		LocalPlayer.Character:FindFirstChildOfClass("Humanoid"):ChangeState(Enum.HumanoidStateType.Jumping)
	end
end)

-- Noclip
RunService.Stepped:Connect(function()
	if _G.Noclip and LocalPlayer.Character then
		for _,v in pairs(LocalPlayer.Character:GetDescendants()) do
			if v:IsA("BasePart") then
				v.CanCollide = false
			end
		end
	end
end)

-- Save Position
local SavedCFrame
_G.SavePos = function()
	SavedCFrame = LocalPlayer.Character.HumanoidRootPart.CFrame
end

_G.LoadPos = function()
	if SavedCFrame then
		LocalPlayer.Character.HumanoidRootPart.CFrame = SavedCFrame
	end
end

-- Load Admin Scripts
_G.IY = function()
	loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))()
end

_G.DEX = function()
	loadstring(game:HttpGet("https://raw.githubusercontent.com/peyton2465/Dex/master/out.lua"))()
end

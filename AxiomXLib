-- Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UIS = game:GetService("UserInputService")
local LocalPlayer = Players.LocalPlayer
local Camera = workspace.CurrentCamera

-- ================= UI =================
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
ScreenGui.Name = "MatrixHub"

local Main = Instance.new("Frame", ScreenGui)
Main.Size = UDim2.fromScale(0.35,0.45)
Main.Position = UDim2.fromScale(0.33,0.25)
Main.BackgroundColor3 = Color3.fromRGB(5,10,5)
Main.BorderSizePixel = 0
Main.Active = true
Main.Draggable = true

local Stroke = Instance.new("UIStroke", Main)
Stroke.Color = Color3.fromRGB(0,255,0)
Stroke.Thickness = 1.5

local Title = Instance.new("TextLabel", Main)
Title.Size = UDim2.new(1,0,0.1,0)
Title.BackgroundTransparency = 1
Title.Text = "MATRIX HUB"
Title.TextColor3 = Color3.fromRGB(0,255,0)
Title.Font = Enum.Font.Code
Title.TextScaled = true

-- ================= BUTTON MAKER =================
local function createButton(text,posY)
    local btn = Instance.new("TextButton", Main)
    btn.Size = UDim2.new(0.9,0,0.08,0)
    btn.Position = UDim2.new(0.05,0,posY,0)
    btn.BackgroundColor3 = Color3.fromRGB(10,30,10)
    btn.TextColor3 = Color3.fromRGB(0,255,0)
    btn.Text = text
    btn.Font = Enum.Font.Code
    btn.TextScaled = true
    return btn
end

-- ================= ESP =================
local espEnabled = false
local espMode = "Name"
local espObjects = {}

local function clearESP()
    for _,v in pairs(espObjects) do
        v:Destroy()
    end
    espObjects = {}
end

local function createESP(player)
    if player == LocalPlayer then return end
    local char = player.Character
    if not char or not char:FindFirstChild("Head") then return end

    if espMode == "Name" or espMode == "Distance" then
        local bill = Instance.new("BillboardGui")
        bill.Size = UDim2.new(0,200,0,50)
        bill.AlwaysOnTop = true
        bill.Adornee = char.Head
        bill.Parent = ScreenGui

        local txt = Instance.new("TextLabel", bill)
        txt.Size = UDim2.new(1,0,1,0)
        txt.BackgroundTransparency = 1
        txt.TextColor3 = Color3.fromRGB(0,255,0)
        txt.Font = Enum.Font.Code
        txt.TextScaled = true

        RunService.RenderStepped:Connect(function()
            if char and char:FindFirstChild("HumanoidRootPart") then
                local dist = (LocalPlayer.Character.HumanoidRootPart.Position -
                             char.HumanoidRootPart.Position).Magnitude
                txt.Text = espMode == "Distance" and
                (player.Name.." ["..math.floor(dist).."]") or player.Name
            end
        end)

        table.insert(espObjects,bill)
    end
end

-- ================= BUTTONS =================
local EspBtn = createButton("ESP: OFF",0.12)
EspBtn.MouseButton1Click:Connect(function()
    espEnabled = not espEnabled
    EspBtn.Text = espEnabled and "ESP: ON" or "ESP: OFF"
    clearESP()

    if espEnabled then
        for _,plr in pairs(Players:GetPlayers()) do
            createESP(plr)
        end
    end
end)

-- ESP MODE DROPDOWN (simples)
local EspModeBtn = createButton("ESP MODE: NAME",0.22)
EspModeBtn.MouseButton1Click:Connect(function()
    local modes = {"Name","Distance"}
    local idx = table.find(modes,espMode) or 1
    espMode = modes[idx % #modes + 1]
    EspModeBtn.Text = "ESP MODE: "..espMode
    clearESP()
end)

-- ================= MOVEMENT =================
local speed = 16
local jump = 50
local infJump = false
local noclip = false

createButton("Speed +",0.32).MouseButton1Click:Connect(function()
    speed += 10
    LocalPlayer.Character.Humanoid.WalkSpeed = speed
end)

createButton("Jump +",0.42).MouseButton1Click:Connect(function()
    jump += 25
    LocalPlayer.Character.Humanoid.JumpPower = jump
end)

createButton("Infinite Jump",0.52).MouseButton1Click:Connect(function()
    infJump = not infJump
end)

UIS.JumpRequest:Connect(function()
    if infJump then
        LocalPlayer.Character.Humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
    end
end)

createButton("Noclip",0.62).MouseButton1Click:Connect(function()
    noclip = not noclip
end)

RunService.Stepped:Connect(function()
    if noclip and LocalPlayer.Character then
        for _,v in pairs(LocalPlayer.Character:GetDescendants()) do
            if v:IsA("BasePart") then
                v.CanCollide = false
            end
        end
    end
end)

-- ================= UTILITIES =================
local savedCFrame

createButton("Save Position",0.72).MouseButton1Click:Connect(function()
    savedCFrame = LocalPlayer.Character.HumanoidRootPart.CFrame
end)

createButton("Go To Position",0.82).MouseButton1Click:Connect(function()
    if savedCFrame then
        LocalPlayer.Character.HumanoidRootPart.CFrame = savedCFrame
    end
end)

-- ================= ADMIN =================
createButton("Infinite Yield",0.92).MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))()
end)

-- Dex / Odex
createButton("Dex Explorer",1.02).MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/peyton2465/Dex/master/out.lua"))()
end)
